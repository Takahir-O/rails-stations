<h1>映画一覧</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>映画タイトル</th>
            <th>公開年</th>
            <th>上映中か</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>作成日時</th>
            <th>更新日時</th>
        </tr>
    </thead>
<tbody>
    <% @movies.each do |movie| %>
        <tr>
            <td><%= link_to movie.id,edit_admin_movie_path(movie) %></td>
            <td><%= movie.name %></td>
            <td><%= movie.year %></td>
            <td><%= movie.is_showing? ? "上映中" : "上映予定" %></td>
            <td><%= movie.description %></td>
            <td><%= link_to movie.image_url,movie.image_url,target: "_blank" %></td>
            <td><%= movie.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= movie.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
    <% end %>
</tbody>
</table>