<h1>映画登録</h1>

<table>
    <thead>
        <tr>
            <th>タイトル</th>
            <th>公開年</th>
            <th>説明</th>
            <th>画像</th>
            <th>上映状況</th>
        </tr>
    </thead>
<tbody>
    <% @movies.each do |movie| %>
        <tr>
            <td><%= movie.name %></td>
            <td><%= movie.year %></td>
            <td><%= movie.description %></td>
            <td><%= movie.image_url %></td>
            <td><%= movie.is_showing? ? "上映中" : "上映予定" %></td>
        </tr>
    <% end %>
</tbody>
</table>